    {% block body -%}
    <h1>Team list</h1>

            {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "admin_teams."} %}
    
    <table class="table dataTable">
