                    <td>{{ entity.id }}</td>
                    <td>{{ entity.active|fontAwesome() }}</td>
                    <td><ul class="list-inline">        <li>
            <a class="btn btn-primary"
               href="{{ path('admin_teams.show', { 'id': entity.id }) }}">
                show
            </a>
        </li>        <li>
            <a class="btn btn-primary"
               href="{{ path('admin_teams.edit', { 'id': entity.id }) }}">
                edit
            </a>
        </li></ul>
                    </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

