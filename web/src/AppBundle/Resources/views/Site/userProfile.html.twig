{% extends 'AppBundle:Layout:frontAppLayout.html.twig' %}


{% block body %}
    <div class="container">
    <div class="row-centered user-page">
        <div class="col-md-5 col-centered text-center">
            {% if player.image is defined and player.image is not null %}
                <img style="max-width: 140px; margin: auto"
                     class="img-responsive img-circle"
                     src="{{ zantolov_uploader_asset(player.image, 'imageFile', null, false) | imagine_filter('postLeadingImageBig') }}">
            {% else %}
                <img style="max-width: 140px; margin: auto"
                     class="img-responsive img-circle"
                     src="{{ asset('bundles/app/img/logo-icon-2.svg') }}" height="80">
            {% endif %}

            <h3>User name</h3>

            <cite>{{ player.getAlias }}</cite>

            <p>
                <i class="fa fa-envelope"></i>
                {{ player.getUser.getEmail }}
            </p>

            <p>
                <i class="fa fa-users"></i>
                {{ player.team }}
            </p>

            <p>
                <i class="fa fa-heart"></i>
                18 km
            </p>

            <p>
                <i class="fa fa-bar-chart"></i>
                6700 cal
            </p>

            <span>
              <a href="http://www.facebook.com/share.php?u={{ url(app.request.attributes.get('_route'),
              app.request.attributes.get('_route_params')) }}"
                 class="social-icon"
                 target="_blank">
                  <i class="fa fa-2x fa-facebook"></i>
              </a>
            </span>
            <span>
               <a href="http://twitter.com/share?text='Profile'&url={{ url(app.request.attributes.get('_route'),
               app.request.attributes.get('_route_params')) }}"
                  class="social-icon"
                  target="_blank">
                   <i class="fa fa-2x fa-twitter"></i>
               </a>
            </span>
        </div>
    </div>
{% endblock %}