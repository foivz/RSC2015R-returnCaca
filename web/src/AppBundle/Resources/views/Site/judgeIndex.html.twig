{% extends 'AppBundle:Layout:frontAppSidebarLayout.html.twig' %}


{% block mainColumn %}
    <div class="col-md-12">

        {# navs tabs navigation #}
        <div class="col-md-10">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#home" data-toggle="tab">General</a>
                </li>
                <li>
                    <a href="#location" data-toggle="tab">Location</a>
                </li>
                <li>
                    <a href="#rules" data-toggle="tab">Rules</a>
                </li>
            </ul>
        </div>
        <div class="col-md-2">
            <a class="btn btn-default push right" href="#">Save game</a>
        </div>


        <div id="myTabContent" class="tab-content">

            {#General game info#}
            <div class="tab-pane fade active in" id="home">
                {# Players #}
                <div class="col-md-6">
                    <h4 class="text-center">Players</h4>

                    <ul class="col-md-12 player-scroll" id="sortable1">


                        {# kartica igraca #}
                        <li class="col-md-12 player-card">
                            <div class="col-md-2">
                                <br>
                                <img class="img-responsive img-circle" src="{{ asset('bundles/app/img/dan.jpeg') }}">
                            </div>
                            <div class="col-md-10">
                                <h5>Player Name</h5>

                                <p>Player Nickname</p>

                                <p>Level</p>
                            </div>
                        </li>

                        {# kartica igraca #}
                        <li class="col-md-12 player-card">
                            <div class="col-md-2">
                                <br>
                                <img class="img-responsive img-circle" src="{{ asset('bundles/app/img/dan.jpeg') }}">
                            </div>
                            <div class="col-md-10">
                                <h5>Player Name</h5>

                                <p>Player Nickname</p>

                                <p>Level</p>
                            </div>
                        </li>
                    </ul>
                </div>

                {# Teams #}
                <div class="col-md-6">
                    <h4 class="text-center">Teams</h4>

                    <div class="col-md-12" id="blue-team">
                        <div>

                            <div class="form-group">
                                <input class="form-control" id="focusedInput" type="text" value="Team A" autofocus>
                            </div>

                            {# List of players #}
                            <ul class="team-selection connectedSortable" id="sortable2">
                            </ul>

                        </div>
                    </div>
                    <div class="col-md-12" id="red-team">
                        <div>
                            <div class="form-group">
                                <input class="form-control" id="focusedInput" type="text" value="Team B">
                            </div>
                            {# List of players #}
                            <ul class="team-selection connectedSortable" id="sortable3">
                            </ul>
                        </div>
                    </div>
                </div>


            </div>
            {#Location tab#}
            <div class="tab-pane fade" id="location">
                <div class="col-md-12">
                    <h2 class="text-center">Location</h2>
                </div>
            </div>

            {#Rules tab#}
            <div class="tab-pane fade" id="rules">
                <div class="col-md-12">
                    <h2 class="text-center">Rules</h2>
                </div>
            </div>
        </div>


    </div>


{% endblock %}
