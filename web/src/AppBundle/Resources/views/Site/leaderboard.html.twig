{% extends 'AppBundle:Layout:frontAppLayout.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row-centered">
            <div class="col-centered col-md-8">
                <i class="fa fa-trophy fa-4x leaderboard-icon"></i>

                <div class="bs-component">
                    <table class="table table-striped table-hover leaderboard-table">
                        <tbody>
                        {% set place = 1 %}
                        {% for team in teams %}
                            <tr{% if place == 1 %} class="warning" {% endif %}>
                                <td>{{ place }}.</td>
                                <td>
                                    <img class="img-responsive img-circle"
                                         src="{{ asset('bundles/app/img/dan.jpeg') }}">
                                </td>
                                <td>{{ team.name }}</td>
                                <td>{{ team.points }}pts</td>
                                <td>
                                    <a href="javascript:void(0)">
                                        Profile
                                    </a>
                                </td>
                            </tr>
                            {% set place = place +1 %}
                        {% endfor %}

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}