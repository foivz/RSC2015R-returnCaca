{% extends 'AppBundle::baseAdmin.html.twig' %}

    {% block body -%}
        <h1>Game list</h1>

        {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "admin_games."} %}

        <table class="table dataTable">
            <thead>
            <tr>
                <th>Id</th>
                <th>Active</th>
                <th>Team 1</th>
                <th>Team 2</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('admin_games.show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                    </td>
                    <td>{{ entity.active|fontAwesome() }}</td>
                    <td>
                        {% if entity.winner == entity.team1 %}
                            <i class="fa fa-star"></i>
                        {% endif %}
                        {{ entity.team1 }}
                    </td>
                    <td>
                        {% if entity.winner == entity.team2 %}
                            <i class="fa fa-star"></i>
                        {% endif %}
                        {{ entity.team2 }}
                    </td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a class="btn btn-primary"
                                   href="{{ path('admin_games.show', { 'id': entity.id }) }}">
                                    show
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-primary"
                                   href="{{ path('admin_games.edit', { 'id': entity.id }) }}">
                                    edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "admin_games."} %}        {% endblock %}
